<h1><%= @genre.type %> Films</h1>
<div>
  <% for film in @films %>
  <div class="list">
    <h3>Title: <%= film.title %></h3>

    <h3>Genre: <%= film.genre.type %></h3>

    <h3>Release Date: <%= film.release_date %></h3>

    <h3>Date Seen: <%= film.date_seen %></h3>
    
  <% end %>
  <div>
</div>
